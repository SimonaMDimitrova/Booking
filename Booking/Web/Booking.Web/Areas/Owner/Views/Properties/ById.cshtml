@model Booking.Web.ViewModels.PropertiesViewModels.PropertyByIdViewModel
@inject Booking.Services.IDictionariesService dictionariesService
@{
    this.ViewData["Title"] = this.Model.Name;
}

<a asp-area="Owner" asp-controller="Properties" asp-action="All" class="add"><i class="fas fa-arrow-circle-left"></i> <span class="underline">Back to my properties</span></a>
<h2 class="h2 text-center padding-headings">@this.ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-12 byid">
        @if (this.TempData.ContainsKey("Message"))
        {
            <div class="alert alert-success margins-temp">@this.TempData["Message"]</div>
        }
        <div>
            @for (int i = 0; i < Model.Stars; i++)
            {
                <i class="fas fa-star star"></i>
            }
            @for (int i = 0; i < 5 - Model.Stars; i++)
            {
                <i class="far fa-star star"></i>
            }
        </div>
        <div>
            <span class="property-badge">@Model.PropertyCategory</span>
            <span class="property-badge">@Model.Floors floors</span>
            <span class="property-badge">@Model.PropertyType</span>
        </div>
        <div class="country-town margin-bottom">@Model.Address, @Model.Town, @Model.Country</div>
    </div>
</div>

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        @{
            var index = 0;
            foreach (var image in Model.Images)
            {
                if (index == 0)
                {
                    <div class="carousel-item active">
                        <img class="d-block size" src="@image" alt="@Model.Name">
                    </div>
                }
                else
                {
                    <div class="carousel-item">
                        <img class="d-block size" src="@image" alt="@Model.Name">
                    </div>

                    if (Model.Offers.Any())
                    {
                        foreach (var offer in Model.Offers)
                        {
                            foreach (var offerImage in offer.Images)
                            {
                                <div class="carousel-item">
                                    <img class="d-block size" src="@offerImage" alt="@Model.Name">
                                </div>
                            }
                        }
                    }
                }

                index++;
            }
        }
    </div>
    <div class="controllers-carousel">
        <a class="" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="arrow-carousel" aria-hidden="true"><i class="fas fa-arrow-left"></i></span>
            <span class="sr-only"></span>
        </a>
        <a class="" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="arrow-carousel" aria-hidden="true"><i class="fas fa-arrow-right"></i></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>


<div class="row">
    <div class="col-md-6">
        <hr />
        <h3 class="text-center">Description</h3>
        <hr />
        @if (!string.IsNullOrWhiteSpace(Model.Description))
        {
            <div>@Model.Description</div>
        }
        else
        {
            <div>There is no additional information.</div>
        }
    </div>
    <div class="col-md-6">
        <hr />
        <h3 class="text-center">Property facilities</h3>
        <hr />
        <ul>
            @foreach (var facility in Model.Facilities)
            {
                <li><i class="fas fa-check"></i> @facility</li>
            }
        </ul>
    </div>
</div>
<hr />

<hr />
<h3 class="text-center">Offers</h3>
<hr />
<div class="row">
    @if (Model.Offers.Count() == 0)
    {
        <div>No offers found.</div>
        <p><a asp-controller="Offers" asp-action="Add" asp-route-id="@Model.Id"><i class="fas fa-plus-circle"></i> Add an offer</a></p>
    }
    else
    {
        <div class="col-md-12">
            <table class="table table-bordered">
                <thead class="thead-gray">
                    <tr>
                        <th>Valid from - Valid to</th>
                        <th>Guests and prices</th>
                        <th>Bed types</th>
                        <th>Facilities</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var offer in Model.Offers)
                    {
                        <tr>
                            <td>
                                <strong>@offer.ValidFrom</strong> - <strong>@offer.ValidTo</strong>
                                <ul class="list-inline">
                                    <li class="list-inline-item">
                                        <a class="btn button" asp-action="Edit" asp-controller="Offers" asp-route-id="@offer.Id">Edit</a>
                                    </li>
                                    <li class="list-inline-item">
                                        <form method="post">
                                            <button class="btn btn-danger" asp-action="Delete" asp-controller="Offers" asp-route-id="@offer.Id">Delete</button>
                                        </form>
                                    </li>
                                </ul>
                            </td>
                            <td>
                                <strong>Guests:</strong> @offer.Guests<br />
                                <strong>Single price per day:</strong> @offer.Price @Model.CurrencyCode <br />
                                <strong>Price per day to all guests:</strong> @(offer.Price * offer.Guests) @Model.CurrencyCode
                            </td>
                            <td>
                                @{var rooms = dictionariesService.CreateBedTypeDictionary(offer.Rooms)
                                          .OrderByDescending(r => r.Value);
                                    foreach (var room in rooms)
                                    {
                                        <div>
                                            <strong>@(room.Value / offer.Rooms.FirstOrDefault(r => r.Type == room.Key).Capacity) x</strong> @room.Key
                                        </div>
                                    }
                                }
                            </td>
                            <td>
                                @{var facilities = dictionariesService.CreateFacilitiesDictionary(offer.OfferFacilities);
                                    foreach (var facility in facilities)
                                    {
                                        <div class="padding-facilities">@facility.Key</div>
                                        foreach (var facilityName in facility.Value)
                                        {
                                            <div><i class="fas fa-check"></i> @facilityName</div>
                                        }
                                    }

                                    if (!facilities.Any())
                                    {
                                        <div>None.</div>
                                    }
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <a asp-controller="Offers" asp-action="Add" asp-route-id="@Model.Id" class="add"><i class="fas fa-plus-circle"></i> Add new offer</a>
        </div>
    }
</div>
<hr />
<a asp-area="Owner" asp-controller="Properties" asp-action="All" class="add"><i class="fas fa-arrow-circle-left"></i> <span class="underline">Back to my properties</span></a>

<div class="modal" tabindex="-1" role="dialog" id="deleteModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <h4>Do you want to delete @Model.Name?</h4>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn button btn-margin" onclick="document.getElementById('deleteForm').submit()">Yes</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
            </div>
        </div>
    </div>
</div>
